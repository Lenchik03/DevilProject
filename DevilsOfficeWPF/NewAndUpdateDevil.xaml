<Window x:Class="DevilsOfficeWPF.NewAndUpdateDevil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevilsOfficeWPF"
        mc:Ignorable="d"
        Title="NewAndUpdateDevil" Height="450" Width="800">
    <StackPanel>
        <StackPanel Margin="30">
            <Label Content="Погоняло"/>
            <TextBox Text="{Binding Devil.Nick}"/>
            <Label Content="Кол-во душ"/>
            <TextBox Text="{Binding Devil.Rank}" />
            <Label Content="Год восстания"/>
            <TextBox Text="{Binding Devil.Year}" />
            <Button Content="Отправить" Click="SaveClick"/>
        </StackPanel>
    </StackPanel>
</Window>
